@model IEnumerable<CrowdGod.Data.Reply>

@{
    ViewData["Title"] = "Index";
}

@foreach (var item in Model) {
        <div class="container bg-dark text-light">
            <div class="row">
                <div class="col-5">
                    @Html.DisplayFor(modelItem => item.Content)
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                    @Html.DisplayFor(modelItem => item.CreatedUtc)
                </div>
            </div>
        </div>
        <a asp-action="Edit" asp-controller="Reply" class="card-link" asp-route-id="@item.ReplyId">Edit</a>
        <a asp-action="Details" asp-controller="Reply" class="card-link" asp-route-id="@item.ReplyId">Details</a>
        <a asp-action="Delete" asp-controller="Reply" class="card-link" asp-route-id="@item.ReplyId">Delete</a>
}
