@model CrowdGod.Data.Reply

@{
    ViewData["Title"] = "Edit";
}
<div class="text-light">
    <h1>Edit</h1>

    <h4>Reply</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ReplyId" />
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedUtc" class="control-label"></label>
                    <input asp-for="CreatedUtc" class="form-control" />
                    <span asp-validation-for="CreatedUtc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ModifiedUtc" class="control-label"></label>
                    <input asp-for="ModifiedUtc" class="form-control" />
                    <span asp-validation-for="ModifiedUtc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnswerId" class="control-label"></label>
                    <select asp-for="AnswerId" class="form-control" asp-items="ViewBag.AnswerId"></select>
                    <span asp-validation-for="AnswerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
