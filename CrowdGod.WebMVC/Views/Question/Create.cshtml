@model CrowdGod.Data.Question

@{
    ViewData["Title"] = "Create";
}
<hr />
<div class="row text-light">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Title" placeholder="Choose a nice, fitting title.." class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <textarea asp-for="Content" placeholder="You can type additional information in here, or you can leave it blank"class="form-control" placeholder=""></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group text-center">
                <input type="submit" value="Create" class="w-600 btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="text-danger" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
