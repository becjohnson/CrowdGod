        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><div class="container" style="max-width:200px; max-height:100px;"><img class="img-fluid" src="/assets/Logo.png" style="max-width:100%; height:auto; "/></div></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex align-content-end">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="container text-center">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
